@model Organizer.Models.Task

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Task</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Group)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Group)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Priority)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Priority)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Date)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Date)
        </dd>


        <dt>
            @Html.DisplayNameFor(model => model.Subtasks)
        </dt>
        <dd>
            <p>
                <a asp-controller="Subtasks" asp-action="Create">+ Create New Subtask</a>
            </p>
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Group</th>
                    <th>Priority</th>
                    <th>Date</th>
                </tr>
                @foreach (var item in Model.Subtasks)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Group)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Priority)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            <a asp-controller="Subtasks" asp-action="Edit" asp-route-id="@item.SubtaskID">Edit</a> |
                            <a asp-controller="Subtasks" asp-action="Details" asp-route-id="@item.SubtaskID">Details</a> |
                            <a asp-controller="Subtasks" asp-action="Delete" asp-route-id="@item.SubtaskID">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
